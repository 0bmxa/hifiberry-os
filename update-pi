#!/bin/bash
cd `dirname $0`

VERSION=$1
HOST=$2
if  [ "$HOST" == "" ]; then
 echo $0 hostname
 echo  e.g. $0 piversion 10.0.1.23 will push the current release to the Pi with the IP address 10.0.1.23
 exit 1
fi 

PORT=$3
if [ "$PORT" == "" ]; then
 PORT=22
fi

if [ "$PASSWORD" == "" ]; then
  PASSWORD=hifiberry
fi

#VERSION=`sshpass -p 'hifiberry' ssh -p $PORT root@$HOST cat /etc/raspberrypi.version`

echo "Updating $HOST with Pi$VERSION release"

./create-image $VERSION
IMG=`ls images/ | grep updater | grep pi$VERSION | tail -1`
echo "Updating $HOST with $IMG"
sshpass -p "$PASSWORD" scp -P $PORT images/$IMG root@$HOST:/data/updater.tar.gz; 
sshpass -p "$PASSWORD" sh -p $PORT root@$HOST /opt/hifiberry/bin/extract-update --reboot


