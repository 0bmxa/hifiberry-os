#! /bin/sh

# Additional options that are passed to Spotify server
OPTIONS=""

case "$1" in
    start)
	printf "Starting spotifyd: "
	start-stop-daemon -S -q --exec /usr/bin/spotifyd -- $OPTIONS
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
    stop)
	printf "Stopping sigmatcp: "
	start-stop-daemon -K -q /usr/bin/spotifyd
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
    restart)
	$0 stop
	$0 start
	;;
    *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
	;;
esac

